message = "You Have Been Caught!"
def setup():
    global font, theta
    global img_prisoner
    global img_prisonGuard
    size(640, 480)
    font = createFont("Atlas",60, True)
    theta = 0

    img_prisonGuard = loadImage("prison guard.png")
    img_prisoner = loadImage("prisoner.png")

def draw():
    global font
    global theta
    global message
    global img_prisonGuard
    global img_prisoner
    background(255, 38, 0)
    image(img_prisonGuard, 0, 0)
    fill(255)
    textFont(font)
    translate(width/2,height/2)
    rotate(theta)
    textAlign(CENTER)
    text(message, 0,0)
    theta += 0.01
