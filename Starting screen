StartingText = [ "Press Space To Commence The Escape!"]
def setup():
    global font
    global x 
    global index
    global jail_img
    global title_img
    size(338,338)

    font = createFont("Arial",16,True)
    # Initialize headline offscreen to the right 
    x = width 
    index = 0
    jail_img = loadImage("jail.jpg")
    title_img = loadImage("title.png")

def draw():
    global font
    global x
    global index 
    global StartingText
    background(jail_img)
    fill(0)
    image(title_img,70,100)

    textFont(font,16)       
    textAlign(LEFT)
    text(StartingText[index],x,300)

    
    x = x - 3

    w = textWidth(StartingText[index])
    if (x < -w):
      x = width 
      index = (index + 1) % len(StartingText)
